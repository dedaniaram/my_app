<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All products</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Product</h2>
            <span class="text-light">Use the below form to update a product</span>
        </div>

        <!-- update user form -->
        <form method="post" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= product._id %>">
                        <input type="text" name="name" value="<%= product.name %>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="Description" class="text-light">Description</label>
                        <input type="text" name="description" value="<%= product.description %>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="Quantity" class="text-light">Quantity</label>
                        <input type="text" name="quantity" value="<%= product.quantity %>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="Price" class="text-light">Unit Price</label>
                        <input type="text" name="price" value="<%= product.price %>" placeholder="">
                    </div>
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
        
            </div>
        </form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->